<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tianfeihan.tennews.MainActivity">

    <TextView
        android:text="用户名："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="78dp"
        android:id="@+id/Edit4" />

    <TextView
        android:text="密码："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Edit4"
        android:layout_alignLeft="@+id/Edit4"
        android:layout_alignStart="@+id/Edit4"
        android:layout_marginTop="84dp"
        android:id="@+id/edit3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_alignBottom="@+id/edit3"
        android:layout_alignLeft="@+id/username1"
        android:layout_alignStart="@+id/username1"
        android:id="@+id/password1" />

    <Button
        android:text="登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/password1"
        android:layout_toStartOf="@+id/password1"
        android:layout_marginBottom="116dp"
        android:id="@+id/login"
        android:background="@color/colorPrimaryDark"
        android:elevation="0dp" />

    <Button
        android:text="注册"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/login"
        android:layout_alignRight="@+id/password1"
        android:layout_alignEnd="@+id/password1"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:id="@+id/signup" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:id="@+id/username1"
        android:layout_alignBaseline="@+id/Edit4"
        android:layout_alignBottom="@+id/Edit4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
